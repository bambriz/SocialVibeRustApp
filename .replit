modules = ["rust", "python-3.11", "rust-stable"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["openssl", "pkg-config"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"source /home/runner/workspace/.local/share/.cargo/env && cargo run\""
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41427
externalPort = 3001
